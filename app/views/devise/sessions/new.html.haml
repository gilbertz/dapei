      .directions
        -if flash
          - flash.each do |name, msg|
            - if msg.is_a?(String)
              %p
                =msg
                %a.close{"data-dismiss" => "alert"} ×

      %h3 使用上街吧账号登录
      .clearfix.login_w_bd
        = simple_form_for(resource, :as => resource_name, :validate=>false, :url => session_path(resource_name)) do |f|
          -#- if f.error :base
            = f.error :base
          %ul
            %li
              =f.input :email, :label=>"邮箱：",  :input_html=>{:class=>"txt", :style=>"width:200px;"}
            %li
              =f.input :password, :label=>"密码：",  :input_html=>{:class=>"txt", :style=>"width:200px;"}
            %li.clause
              = f.input :remember_me, :label=>false, :as => :boolean if devise_mapping.rememberable?
              下次自动登录 
            %li.submit
              = f.button :submit, "登录", :class=>"submit_btn"
        .No_account
          = link_to "忘记密码?  ", new_password_path(resource_name),  :rel=>"facebox", :style=>"margin-left:-20px;"
          &nbsp &nbsp没有帐号？
          %a{:href => "/accounts/sign_up"} 赶快注册
                                               
