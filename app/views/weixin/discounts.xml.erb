<xml>    
    <ToUserName><![CDATA[<%= params[:xml][:FromUserName] if params[:xml] %>]]></ToUserName>
    <FromUserName><![CDATA[<%= params[:xml][:ToUserName] if params[:xml] %>]]></FromUserName>
    <CreateTime><%= Time.now.to_i %></CreateTime>
    <MsgType><![CDATA[news]]></MsgType>
    <ArticleCount><%= get_count %></ArticleCount>
    <Articles>
    <% if  @res['discounts'] %>
      <% size = @res['discounts'].length %>
      <% for i in (0..size) do %>
        <% item = @res['discounts'][i] %>
        <%if item %>
          <item>
          <Title><![CDATA[ <%= get_discount_name(item) %> ]]></Title> 
          <Description><![CDATA[ <%= get_discount_content(item) %> ]]></Description>
          <PicUrl><![CDATA[  <%= get_discount_img(item, i==0) %>   ]]></PicUrl>
          <Url><![CDATA[ <%= get_discount_url(item) %> ]]></Url>
         </item>
        <% end %>
      <% end %>
    <% end %>
    </Articles>
    <FuncFlag>1</FuncFlag>
</xml>
