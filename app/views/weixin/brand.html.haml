.head_wrapper
  %a{:href => "#"}
    %img{:src => "#{@brand.wide_campaign_img(:wide_medium)}"}/
  .intro
    %h4
      = @brand.get_display_name
      %p.right{:align => "right", :style => "margin-top:5px; color:#666"}
        %font{:face => "icon", :size => "2"} 1
        %font{:face => "微软雅黑"} #{@brand.likes_count}人喜欢
        \ 
        %font{:face => "icon", :size => "2"}
        %font{:face => "微软雅黑"} #{@brand.get_dispose_count}人在逛
  %p
    .discount
      .status
        - if @discount
          %a{:href=>"/weixin/discount?id=#{@discount.id}"}
            %p{:align => "center", :style => " background-color:#f861b0; background-position:center; color:#fff"}
              #{@discount.title} ... 点击查看>>

  - if @page == 1
    .grids
      .grid-12.grid
        - brand_intro=@brand.brand_intro
        - unless brand_intro.blank? 
          %p
            = @brand.brand_intro
        - if @brand
          %p
            %a{:href=>"/weixin/search?q=#{@brand.name}&#{@lbs_params}"}查看#{@brand.get_display_name}在#{@city}的店铺>>
            
            /(点击图片查看大图)
            /\----上街小编
        %a
  - elsif @page > 1
    %a{:href=>"#{@first_page}"}
      %p{:align => "center", :style => " background-color:#f861b0; max-width:50px; background-position:center; color:#fff"} 回到品牌
  / end of grids
/ end of wrapper
/%hr/
.wrapper
  新品

- @skus.each do |sku|
  .wrapper
    %p{:style => "text-align:center"}
      %a{:href => "/weixin/sku?id=#{sku.id}"}
        %img{:src => "#{sku.first_photo.url(:scaled_large)}"}/
    .title
      %p{:style => "color:#000"} #{sku.title}
    .grid-7
      %p{:align => "right", :style => "color:#ccccc"}
        %font{:face => "icon", :size => "2"} 1
        %font{:face => "微软雅黑"} #{sku.likes_count}人喜欢
        \ 
        %font{:face => "icon", :size => "2"} 2
        %font{:face => "微软雅黑"} #{sku.get_dispose_count}人瞄过
/ end of grids
/ end of wrapperrapper

= render 'footer'


=render :partial=>"/shared/report", :locals=>{:type=>"brand", :id=>@brand.id}
