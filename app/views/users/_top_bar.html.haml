          -else
            %li.first
              %span.icon-plus
              %span.data
                %a{:href => "#{shangjie_dapeis_path(@user)}"}已上街搭配
          -if nav_class=="likes"
            %li.active
              %span.icon-love
              %span.data 
                %a{:href => "#{favorite_dapeis_path(@user)}"}收藏中心
          -else
            %li
              %span.icon-love
              %span.data
                %a{:href => "#{favorite_dapeis_path(@user)}"}收藏中心
          -if nav_class=="followings"
            %li.active
              %span.icon-look
              %span.data
                %a{:href => "#{followings_path(@user)}"} 关注的人( #{user.following_count})
          -else
            %li
              %span.icon-look
              %span.data
                %a{:href => "#{followings_path(@user)}"} 关注的人( #{user.following_count})
          -if nav_class=="followers"
            %li.active
              %span.icon-user
              %span.data 
                %a{:href => "#{followers_path(@user)}"} TA的粉丝( #{user.followers_count})
