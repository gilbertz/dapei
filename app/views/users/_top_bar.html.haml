.wrapper
  .my-home-head
    %ul.nav.nav-float
      %li
        .my-avatar
          %img{:src => "#{@user.display_img_medium}"}/
      %li
        %ul.nav.user-info
          %li.username
            = @user.display_name
          %li.user-address
            -if @user.city and @user.city!=""
              %span 来自：
              %span.address #{@user.city}
            -else
              %span 来自：
              %span.address 还不知道。
          %li.user-desc
            -if user.desc!=""
              %span 自我介绍：
              %span.desc #{@user.desc}
            -else
              %span 自我介绍：
              %span.desc 爱时尚，爱上街
          %li.user-desc
            %span 上街记录：
            %span.desc 已发布 #{@user.dapei_count} 搭配, &nbsp; 已上街#{@user.v_dapei_count} 搭配, &nbsp; 共获得#{@user.dapei_likes_count}赞
