-#.recom-p.clearfix.profile_menu
  .info
    .left
      %img{:height => "150", :src => "#{user.display_img_medium}", :width => "150"}/
      -if user_signed_in? and user==current_user
        .Operating
          %a.Modify_data{:href => "#{edit_user_registration_path}"} 修改资料
      -else
        .Operating2
          = render :partial => "/shared/follow", :locals => {:followable => user}
    .right
      %h2.Alias 
        .name 
          %a{:href => "#{user_path(@user)}"} #{user.display_name}
        -#.button
          -if user_signed_in? and user==current_user
            .Operating
              %a.Modify_data{:href => "#{edit_user_registration_path}"} 修改资料
          -else
            .Operating2
              = render :partial => "/shared/follow", :locals => {:followable => user}

      -if user.city and user.city!=""
        .Come_from 来自：#{user.city}
      -else
        .Come_from 来自：还不知道，虽然地球人都知道。
      -if user.desc!=""
        .Self-introduction 自我介绍: #{user.desc}
      -else
        .Self-introduction 自我介绍: 有点懒，还没有做过任何介绍！
          
      .Data
        %ul
          %li.Attention_value
            #{user.following_count}
            %br/
            %a{:href => "#{followings_path(@user)}"} 关注
          %li.Fans_value
            #{user.followers_count}
            %br/
            %a{:href => "#{followers_path(@user)}"} 粉丝
          %li.Journal_value
            #{user.posts_count.blank? ? 0 :user.posts_count}
            %br/
            %a.Current{:href => "#{user_posts_path(@user)}"} 日志
      .profile_nav
        %ul
          %li.All
            -if nav_class=="all"
              %a.Current{:href => "#{user_path(@user)}"} 主页
            -else
              %a{:href => "#{user_path(@user)}"} 主页
          %li.Like
            -if nav_class=="favorite"
              %a.Current{:href => "#{favorite_shops_path(@user)}"} 喜欢
            -else
              %a{:href => "#{favorite_shops_path(@user)}"} 喜欢
          %li.Comment
            -if nav_class=="commented"
              %a.Current{:href => "#{commented_shops_path(@user)}"} 评论
            -else
              %a{:href => "#{commented_shops_path(@user)}"} 评论
          %li.Journal
            -if nav_class=="posts"
              %a.Current{:href => "#{user_posts_path(@user)}"} 日志
            -else
              %a{:href => "#{user_posts_path(@user)}"} 日志
          %li.Friends
            -if nav_class=="follow" 
