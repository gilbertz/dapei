.wrapper
  .dapei-top
    %ul.nav.nav-float
      %li
        %img{:src => "/assets/900x300.jpg"}
      %li
        .new-dapei
          %ul.nav
            %li.new-dapei-link.link-w
              -if user_signed_in?
                %a{:href => "/collocations"} +发布搭配
              -else
                %a{:href => "#{layer_sign_in_path}", :rel => "facebox[.about]"} +发布搭配
  

  .hot-dapei-tag
    .hot-dapei-tag-head
      %h2{:style => "float:left;"} 
        热门搭配
  .dapei-body
    - if @dapeis
      %ul.nav.nav-float.stream
        -#- i=1
        - @dapeis.each  do |d|
          -#- if i%3==0
            = render :partial=>"/dapeis/dapei_list_item", :locals=>{:dapei=>d, :dis_class=>"ul-last-li"}
          -#-else
          = render :partial=>"/dapeis/dapei_list_item", :locals=>{:dapei=>d, :dis_class=>"holder"}
          -#-i=i+1
      #page_nav
        = will_paginate @dapeis
