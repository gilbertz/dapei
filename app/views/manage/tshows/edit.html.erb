<%= form_for [:manage,@tshow], html: {class: 'form-horizontal', role: 'form', style: 'margin-top:30px;'} do |f| %>
  <div class="form-group" style='margin-left:0px; margin-right:0px;'>
    <label for="inputEmail3" class="col-sm-2 control-label">Season</label>
    <div class="col-sm-10">
      <%= f.text_field :season, class: 'form-control' %>
    </div>
  </div>
  <div class="form-group" style='margin-left:0px; margin-right:0px;'>
    <label for="inputEmail3" class="col-sm-2 control-label">City</label>
    <div class="col-sm-3">
      <%= f.text_field :city, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group" style='margin-left:0px; margin-right:0px;'>
    <label for="inputEmail3" class="col-sm-2 control-label">Author</label>
    <div class="col-sm-3">
      <%= f.text_field :author, class: 'form-control' %>
    </div>
  </div>
  <div class="form-group" style='margin-left:0px; margin-right:0px;'>
    <label for="inputEmail3" class="col-sm-2 control-label">品 牌</label>
    <div class="col-sm-6">
      <%= f.select :brand_id,@brands,{include_blank: '无品牌'}, class: 'form-control' %>
    </div>
  </div>
  <div class="form-group" style='margin-left:0px; margin-right:0px;'>
    <label for="inputEmail3" class="col-sm-2 control-label">描 述</label>
    <div class="col-sm-10">
      <%= f.text_area :content, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group" style='margin-left:0px; margin-right:0px;'>
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit '提交', class: 'btn btn-primary' %>
    </div>
  </div>
<% end %>

