<h3 style='margin-top:0px;'>编辑优惠</h3>
<hr/ style='margin-top:0px;'>
<%= form_for [:manage,@area], html: {class: 'form-horizontal', role: 'form'} do |f| %>
  <div class="form-group" style='margin-left:0px; margin-right:0px;'>
    <label for="inputEmail3" class="col-sm-3 control-label">名称</label>
    <div class="col-sm-9">
      <%= f.text_field :name, class: "form-control" %>
    </div>
  </div>
  <div class="form-group" style='margin-left:0px; margin-right:0px;'>
    <label for="inputEmail3" class="col-sm-3 control-label">拼音</label>
    <div class="col-sm-9">
      <%= f.text_field :pinyin, class: "form-control" %>
    </div>
  </div>
  <div class="form-group" style='margin-left:0px; margin-right:0px;'>
    <label for="inputEmail3" class="col-sm-3 control-label">状态</label>
    <div class="col-sm-9">
      <div class="checkbox">
        <%= f.check_box :on %> 是否开启 ?
      </div>
    </div>
  </div>
  <div class="form-group" style='margin-left:0px; margin-right:0px;'>
    <div class="col-sm-offset-3 col-sm-9">
      <%= f.submit '提交优惠', class: 'btn btn-primary' %>
    </div>
  </div>
<% end %>
