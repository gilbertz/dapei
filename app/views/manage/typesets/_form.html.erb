<%= form_for [:manage, @typeset], html: {class: "form-horizontal", role: "form"} do |f| %>

    <div class="form-group">
      <label class="col-md-2 control-label">名称</label>
      <div class="col-md-4">
        <%= f.text_field :name, class: "form-control", placeholder: "" %>
      </div>
    </div>

    <div class="form-group">
      <label class="col-md-2 control-label">类型</label>
      <div class="col-md-4">
        <%= f.select :typeset_type_id, @typeset_types_for_select, {}, class: "form-control", placeholder: "" %>
      </div>
    </div>

    <div class="form-group">
      <label class="col-md-2 control-label">是否显示</label>
      <div class="col-md-4">
        <%= f.select :is_active, [["显示", 1], ["不显示", 0]], {}, class: "form-control", placeholder: "" %>
      </div>
    </div>

    <div class="form-group">
      <label class="col-md-2 control-label">排序No</label>
      <div class="col-md-4">
        <%= f.text_field :order_no, class: "form-control", placeholder: "" %>
      </div>
    </div>


    <div class="form-group">
      <label class="col-md-2 control-label"></label>
      <div class="col-md-4">
        <%= f.submit class: "btn btn-default" %>
      </div>
    </div>


<% end %>