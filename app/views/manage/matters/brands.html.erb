<div style="padding:5px;">
  <table class="table table-condensed table-bordered">
    <thead>
      <tr><th colspan=8>品牌<%if @is_link==1%>链接<%else%>选项<%end%></th></tr>
    </thead>
    <tbody>
      <tr>
        <td>
        <% if @is_link==1%>
          <a href="/manage/matters/recommends" >所有品牌链接</a>
        <%else%>
          <a href="#" onclick="javascript:$('#cboxClose').click();$('#brandid').val(0);$('#b').val('所有品牌')">所有品牌</a>
        <%end%>
        </td>
      </tr>
      <% @brands.in_groups_of(6) do |group| %>
        <tr>
          <% group.each do |brand| %>
            <td>
            <% if @is_link==1%>
              <a href="/manage/matters/recommends?brandid=<%= brand.try(:id) %>" ><%= brand.try(:name) %></a>
            <%else%>
              <a href="#" onclick="javascript:$('#cboxClose').click();$('#brandid').val(<%= brand.try(:id) %>);$('#b').val('<%= brand.try(:name) %>')"><%= brand.try(:name) %></a>
            <%end%>
            </td>
          <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>
  <div id="paginate">
    <%#= paginate @brands, remote: true %>
  </div>
</div>
