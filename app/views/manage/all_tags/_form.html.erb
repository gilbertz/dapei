<%= form_for [:manage, @all_tag] do |f| %>

    <div class="row">
      <div class="form-group col-lg-6">
        <label>标签名</label>
        <%= f.text_field :name, class: "form-control" %>
      </div>

      <div class="form-group col-lg-6">
        <label>权重</label>
        <%= f.text_field :weight, class: "form-control" %>
      </div>
    </div>


    <div class="form-group">
      <label>同义词</label>
      <%= f.text_field :similar, class: "form-control", style: "height: 100px" %>
    </div>

    <div class="form-group">
      <%= f.submit "确定", class: "btn btn-primary" %>
    </div>

<% end %>

<script type="text/javascript">
  $(function(){
      $("#all_tag_similar").tagsinput();
  })
</script>