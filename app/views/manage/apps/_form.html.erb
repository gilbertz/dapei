<h3 style='margin-top:0px;'><%= params[:action] == "new" ? "新建" : "编辑" %></h3>
<hr style='margin-top:0px;'>
<%= form_for [:manage,@app], html: {class: 'form-horizontal', role: 'form', style: 'width:800px'} do |f| %>
  <div class="form-group" style='margin-left:0px; margin-right:0px;'>
    <label for="inputEmail3" class="col-sm-2 control-label">DEV名称</label>
    <div class="col-sm-7">
      <%= f.text_field :dev_name, class: "form-control" %>
    </div>
  </div>
  <div class="form-group" style='margin-left:0px; margin-right:0px;'>
    <label for="inputEmail3" class="col-sm-2 control-label">描 述</label>
    <div class="col-sm-10">
      <%= f.text_area :desc, class: "form-control", rows: 1 %>
    </div>
  </div>
  <div class="form-group" style='margin-left:0px; margin-right:0px;'>
    <label for="inputEmail3" class="col-sm-2 control-label">返回链接</label>
    <div class="col-sm-10">
      <%= f.text_area :back_url, class: "form-control", rows: 1 %>
    </div>
  </div>


  <div class="form-group" style='margin-left:0px; margin-right:0px;'>
    <label for="inputEmail3" class="col-sm-2 control-label">weight</label>
    <div class="col-sm-10">
      <%= f.select :weight, (0..9),{include_blank: 0}, class: "form-control", rows: 1 %>
    </div>
  </div>

 
  <div class="form-group" style='margin-left:0px; margin-right:0px;'>
    <label for="inputEmail3" class="col-sm-2 control-label">ios id</label>
    <div class="col-sm-10">
      <%= f.text_area :ios_id, class: "form-control", rows: 1 %>
    </div>
  </div>

  
  <div class="form-group" style='margin-left:0px; margin-right:0px;'>
    <label for="inputEmail3" class="col-sm-2 control-label">url_scheme</label>
    <div class="col-sm-10">
      <%= f.text_area :url_scheme, class: "form-control", rows: 1 %>
    </div>
  </div>


  <div class="form-group" style='margin-left:0px; margin-right:0px;'>
    <label for="inputEmail3" class="col-sm-2 control-label">点击链接</label>
    <div class="col-sm-10">
      <%= f.text_area :click_url, class: "form-control", rows: 1 %>
    </div>
  </div>
  <div class="form-group" style='margin-left:0px; margin-right:0px;'>
    <label for="inputEmail3" class="col-sm-2 control-label">Icon链接</label>
    <div class="col-sm-10">
      <%= f.text_area :icon_url, class: "form-control", rows: 1 %>
    </div>
  </div>
<div class="form-group" style='margin-left:0px; margin-right:0px;'>
  <label for="apps_source_type" class="col-sm-2 control-label">设备类型</label>
  <div class="col-sm-10">
    <%= f.select :source_type, [["Andriod", 1],["IOS", 2]], class: "form-control" %>
  </div>
</div>

    <div class="form-group" style='margin-left:0px; margin-right:0px;'>
      <label for="apps_on" class="col-sm-2 control-label">状态</label>
      <div class="col-sm-10">
        <%= f.select :on, [["TRUE", true],["FALSE", false]], class: "form-control" %>
      </div>
    </div>
  <div class="form-group" style='margin-left:0px; margin-right:0px;'>
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit '提交', class: 'btn btn-primary' %>
    </div>
  </div>
<% end %>
