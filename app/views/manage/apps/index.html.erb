<h3><%= link_to "添加App", [:new, :manage, :app], class: "e_obj" %></h3>
<table class="table table-bordered table-hover" style="margin-top:30px;">
  <thead>
    <tr class="warning">
      <th colspan="7" style="text-align:center;">app配置</th>
    </tr>
    <tr class="success">
      <th class="">Id</th>
      <th class="">权重</th>
      <th width="10%">DEV名称</th>
      <th class="">返回链接</th>
      <th class="">点击链接</th>
      <th class="">描述</th>
      <th width="6%">状态</th>
      <th class="col-md-1">操作</th>
    </tr>
  </thead>
  <tbody>
    <% @apps.each do |app| %>
      <tr>
        <td><%= app.id %></td>
        <td><%= app.weight.to_i %></td>
        <td><%= app.dev_name %></td>
        <td><%= app.back_url %></td>
        <td><%= app.click_url %></td>
        <td><%= app.desc %></td>
        <td><%= app.on %></td>
        <td><%= link_to '编辑', [:edit,:manage,app], class: :e_obj %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<table class="table table-bordered table-hover" style="margin-top:30px;">
  <thead>
    <tr class="warning">
      <th colspan="2" style="text-align:center;">app info配置</th>
    </tr>
    <tr class="success">
      <th class="">Id</th>
      <th class="col-md-1">操作</th>
    </tr>
  </thead>
  <tbody>
    <% @app_infos.each do |info| %>
      <tr>
        <td><%= info.id %></td>
        <td><%= link_to '编辑', "/brand_admin/app_infos/#{info.id}/edit" %></td>
      </tr>
    <% end %>
  </tbody>
</table>
