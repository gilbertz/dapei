<%= search_form_for [:manage, @q], html: {class: 'form-inline',role: 'form',style: 'margin-top:30px;'} do |f| %>
  <div class="form-group">
    <label class="sr-only">ShopName</label>
    <%= f.text_field :name_cont, class: 'form-control', placeholder: '店铺名' %>
  </div>
  <div class="form-group">
    <label class="sr-only">CityName</label>
    <%= f.select :city_id_eq, @cities,{include_blank: '空白'}, class: 'form-control' %>
  </div>
  <%= f.submit '搜索', class: 'btn btn-primary'%> 
  <%= total_span @shops %>
<% end %>
<table class="table table-bordered table-hover">
  <thead>
    <tr class="success">
      <th colspan="2">店铺</th>
      <th width="10%">城市</th>
      <th width="12%"><%= sort_link @q, :created_at, '创建时间' %></th> 
      <th width="15%">操作</th>
    </tr>
  </thead>
  <tbody>
    <% cid = @shops.first.city_id %>
    <% cname = @shops.first.shop_city %>
    <% @shops.each do |shop| %>
      <tr>
        <td style="padding: 2px;width:105px;"> 
          <%= image_tag shop.wide_avatar_url, alt: shop_alt(shop), style: "height:70px; width:100px;" %> 
        </td>
        <td>
          <%= link_to shop.name, '#' %>
        </td>
        <td> 
          <% if shop.city_id == cid %>
            <%= cname %>
          <% else %>
            <%= shop.shop_city %> 
          <% end %>
        </td>
        <td><%= to_local shop.created_at %></td>
        <td>
          <%= link_to '详情', [:manage,shop] %> |
          <%= link_to '编辑', [:edit,:manage,shop] %> |
          <%= link_to '删除', [:manage,shop], method: :delete, class: 'ajaxd', 
          remote: true, confirm: 'Are you sure' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= paginate @shops %>  
