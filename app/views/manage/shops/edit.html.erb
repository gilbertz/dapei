<%= render 'nav_tag' %>
<%= form_for [:manage,@shop], html: {class: 'form-horizontal', role: 'form', style:'margin-top:30px;'} do |f| %>
  <div class="form-group">
    <label for="inputEmail3" class="col-sm-2 control-label">微 博</label>
    <div class="col-sm-3">
      <%= f.text_field :weibo, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <label for="inputEmail3" class="col-sm-2 control-label">店铺评级</label>
    <div class="col-sm-2">
      <%= f.select :level, ::Brand::LEVEL, {include_blank: '无' }, class: "form-control input-sm" %>
    </div>
  </div>
  <div class="form-group">
    <label for="inputEmail3" class="col-sm-2 control-label">类 别</label>
    <div class="col-sm-2">
      <%= f.select :category_id, ::Brand::PRIORITY, {include_blank: true }, class: "form-control input-sm" %>
    </div>
  </div>
  <div class="form-group">
    <label for="inputEmail3" class="col-sm-2 control-label">搭配 ID</label>
    <div class="col-sm-2">
      <%= f.text_field :dp_id, class: "form-control input-sm", disabled: true %>
    </div>
  </div>
  <div class="form-group">
    <label for="inputEmail3" class="col-sm-2 control-label">价格区间</label>
    <div class="col-sm-2">
      <%= f.text_field :price_level, class: "form-control input-sm" %>
    </div>
  </div>
  <div class="form-group">
    <label for="inputEmail3" class="col-sm-2 control-label">品牌介绍</label>
    <div class="col-sm-10">
      <%= f.text_area :brand_intro, class: "form-control", rows: "4" %>
    </div>
  </div>
  <div class="form-group">
    <label for="inputEmail3" class="col-sm-2 control-label">别 名</label>
    <div class="col-sm-8">
      <%= f.text_field :alias, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <label for="inputEmail3" class="col-sm-2 control-label">街 道</label>
    <div class="col-sm-8">
      <%= f.text_area :street, class: "form-control", rows: "2" %>
    </div>
  </div>
  <div class="form-group">
    <label for="inputEmail3" class="col-sm-2 control-label">商 场</label>
    <div class="col-sm-3">
      <%= f.select :mall_id, @malls, {include_blank: '无商场'}, class: "form-control input-sm" %>
    </div>
  </div>
  <div class="form-group">
    <label for="inputEmail3" class="col-sm-2 control-label">店铺名称</label>
    <div class="col-sm-8">
      <%= f.text_field :name, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <label for="inputEmail3" class="col-sm-2 control-label">店铺域名</label>
    <div class="col-sm-6">
      <%= f.text_field :url, class: "form-control", placeholder: "字母或者 -" %>
      <p class="help-block">设置后可以通过 "http://shangjieba.com/店铺域名" 直接访问。</p>
    </div>
  </div>
  <div class="form-group">
    <label for="inputEmail3" class="col-sm-2 control-label">品 牌</label>
    <div class="col-sm-5">
      <%= f.select :brand_id, @brands, {include_blank: '无品牌'}, class: "form-control input-sm" %>
    </div>
  </div>
  <div class="form-group">
    <label for="inputEmail3" class="col-sm-2 control-label">营业时间</label>
    <div class="col-sm-2">
      <%= f.text_field :open_hours, class: "form-control input-sm", placeholder: '9:00-21:30' %>
    </div>
  </div>
  <div class="form-group">
    <label for="inputEmail3" class="col-sm-2 control-label">店铺地址</label>
    <div class="col-sm-10">
      <%= f.select :city_id, @cities, {include_blank: '无'}, class: "form-control",  
        style: "width:18%; display: inline" %>
      <%#= f.select :area_id, @areas, {}, class: "form-control input-sm",  
        style: "width:18%; display: inline;"  %>
      <%= f.text_field :address, class: "form-control", placeholder: '店铺详细地址',
        style: "width:62%; display: inline;" %>
    </div>
  </div>
  <div class="form-group">
    <label for="inputEmail3" class="col-sm-2 control-label">主 营</label>
    <div class="col-sm-5">
      <%= f.text_field :product, class: "form-control", placeholder: '女装, 吊带裙, 外套' %>
    </div>
  </div>
  <div class="form-group">
    <label for="inputEmail3" class="col-sm-2 control-label">电 话</label>
    <div class="col-sm-5">
      <%= f.text_field :phone_number, class: "form-control input-sm" %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit '提交店铺', class: 'btn btn-primary' %>
    </div>
  </div>
<% end %>
