<h3 style='margin-top:5px;'>编辑街道</h3>
<hr/ style='margin-top:0px;'>
<%= form_for [:manage,@street], html: {class: 'form-horizontal', role: 'form'} do |f| %>
  <div class="form-group" style='margin-left:0px; margin-right:0px;'>
    <label for="inputEmail3" class="col-sm-2 control-label">评 级</label>
    <div class="col-sm-3">
      <%= f.select :level, ::Brand::LEVEL,{include_blank: '无'}, class: "form-control" %>
    </div>
  </div>
  <div class="form-group" style='margin-left:0px; margin-right:0px;'>
    <label for="inputEmail3" class="col-sm-2 control-label">名 称</label>
    <div class="col-sm-10">
      <%= f.text_field :name, class: "form-control" %>
    </div>
  </div>
  <div class="form-group" style='margin-left:0px; margin-right:0px;'>
    <label for="inputEmail3" class="col-sm-2 control-label">域 名</label>
    <div class="col-sm-10">
      <%= f.text_field :url, class: "form-control" %>
      <p class="help-block">设置后用"http://shangjieba.com/街道域名"访问。</p>
    </div>
  </div>
  <div class="form-group" style='margin-left:0px; margin-right:0px;'>
    <label for="inputEmail3" class="col-sm-2 control-label">描 述</label>
    <div class="col-sm-10">
      <%= f.text_area :introduction, class: "form-control", rows: 3 %>
    </div>
  </div>
  <div class="form-group" style='margin-left:0px; margin-right:0px;'>
    <label for="inputEmail3" class="col-sm-2 control-label">地 址</label>
    <div class="col-sm-10">
      <%= f.text_field :address, placeholder: '街道详细地址', class: "form-control" %>
    </div>
  </div>
  <div class="form-group" style='margin-left:0px; margin-right:0px;'>
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit '提交', class: 'btn btn-primary' %>
    </div>
  </div>
<% end %>
