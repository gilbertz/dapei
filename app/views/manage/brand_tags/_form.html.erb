<h3 style='margin-top:0px;'>编辑</h3>
<hr style='margin-top:0px;'>

<%= form_for [:manage,@brand_tag], html: {class: 'form-horizontal', role: 'form'} do |f| %>
  <div class="form-group" style='margin-left:0px; margin-right:0px;'>
    <label for="inputEmail3" class="col-sm-3 control-label">名称</label>
    <div class="col-sm-9">
      <%= f.text_field :name, class: "form-control" %>
    </div>
  </div>
  <div class="form-group" style='margin-left:0px; margin-right:0px;'>
    <label for="inputEmail3" class="col-sm-3 control-label">类型</label>
    <div class="col-sm-9">
      <%= f.text_field :type_id, class: "form-control" %>
    </div>
  </div>
  <div class="form-group" style='margin-left:0px; margin-right:0px;'>
    <label for="inputEmail3" class="col-sm-3 control-label">Thing图</label>
    <div class="col-sm-9">
      <%= f.text_field :thing_image_id, class: "form-control" %>
    </div>
  </div>
  <div class="form-group" style='margin-left:0px; margin-right:0px;'>
    <div class="col-sm-offset-3 col-sm-9">
      <div class="checkbox">
        <label>
          <%= f.check_box :on %> On
        </label>
      </div>
    </div>
  </div>
  <div class="form-group" style='margin-left:0px; margin-right:0px;'>
    <div class="col-sm-offset-3 col-sm-9">
      <%= f.submit '提交', class: 'btn btn-primary' %>
    </div>
  </div>
<% end %>

