<%= search_form_for [:manage, @q], html: {class: 'form-inline',role: 'form',style: 'margin-top:30px;'} do |f| %>
  <div class="form-group">
    <label class="sr-only">BrandName</label>
    <%= f.text_field :tag_name_cont, class: 'form-control', placeholder: '名称' %>
  </div>
  <%= f.submit '搜索', class: 'btn btn-primary btn-xs'%> 
  <%= total_span @matter_tags %>
<% end %>
<table class="table table-bordered table-hover">
  <thead>
    <tr class="success">
      <th class="col-md-1">Id</th>
      <th class="">名称</th>
      <th width="17%">创建时间</th>
      <th width="10%">操作</th>
    </tr>
  </thead>
  <tbody>
    <% @matter_tags.each do |tag| %>
      <tr>
        <td>
          <span class="badge">
            <%= tag.id %> 
          </span>
        </td>
        <td><%= tag.tag_name %></td>
        <td><%= to_local tag.created_at %></td>
        <td> 
          <%= link_to '编辑', '#' %>  |
          <%= link_to '删除', '#' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= paginate @matter_tags %>
