<h3 style='margin-top:0px;'><%= action_name.in?(['new','create']) ? '新建' : '编辑' %>@爬虫页</h3>
<hr/ style='margin-top:0px;'>

<%= form_for [:manage, @spider, @spider_page], html: {class: "form-horizontal", role: "form"} do |f| %>
  <div class="form-group" style='margin-left:0px; margin-right:0px;'>
    <label for="inputEmail3" class="col-sm-3 control-label">名 称</label>
    <div class="col-sm-9">
      <%= f.text_field :name, class: "form-control" %>
    </div>
  </div>
  <div class="form-group" style='margin-left:0px; margin-right:0px;'>
    <label for="inputEmail3" class="col-sm-3 control-label">Parent</label>
    <div class="col-sm-9">
      <%= f.select :parent_id, @categories_for_select,{}, class: "form-control" %>
    </div>
  </div>
  
  <div class="form-group" style='margin-left:0px; margin-right:0px;'>
    <label for="inputEmail3" class="col-sm-3 control-label">链接</label>
    <div class="col-sm-4">
      <%= f.text_field :link, class: "form-control" %>
    </div>
  </div>
  <div class="form-group" style='margin-left:0px; margin-right:0px;'>
    <div class="col-sm-offset-3 col-sm-9">
      <%= f.submit '提交', class: 'btn btn-primary' %>
    </div>
  </div>
<% end %>
