<%= form_for [:manage,@tshow_spider], html: {class: 'form-horizontal', role: 'form'} do |f| %>
  <%= f.hidden_field :brand_id %>
  <div class="form-group" style='margin-left:0px; margin-right:0px;'>
    <label for="inputEmail3" class="col-sm-2 control-label">状态</label>
    <div class="col-sm-9">
      <div class="checkbox">
        <%= f.check_box :stop %> 是否停止 ?
      </div>
    </div>
  </div>
  <div class="form-group" style='margin-left:0px; margin-right:0px;'>
    <label for="inputEmail3" class="col-sm-2 control-label">模板选择</label>
    <div class="col-sm-3">
      <%= f.select :template_id, @templates, {include_blank: '无模板'}, class: 'form-control input-sm' %>
    </div>
  </div>
  <div class="form-group" style='margin-left:0px; margin-right:0px;'>
    <label for="inputEmail3" class="col-sm-2 control-label">模板</label>
    <div class="col-sm-9">
      <div class="checkbox">
        <%= f.check_box :is_template %> 是否有 ?
      </div>
    </div>
  </div>

  <div class="form-group" style='margin-left:0px; margin-right:0px;'>
    <label for="inputEmail3" class="col-sm-2 control-label">起始页</label>
    <div class="col-sm-10">
      <%= f.text_area :start_page, class: 'form-control', rows: 2 %>
    </div>
  </div>
  <div class="form-group" style='margin-left:0px; margin-right:0px;'>
    <label for="inputEmail3" class="col-sm-2 control-label">Tshow起始页</label>
    <div class="col-sm-10">
      <%= f.text_area :show_page, class: 'form-control', rows: 2 %>
    </div>
  </div>
  <div class="form-group" style='margin-left:0px; margin-right:0px;'>
    <label for="inputEmail3" class="col-sm-2 control-label">P Season</label>
    <div class="col-sm-10">
      <%= f.text_field :season, class: 'form-control' %>
    </div>
  </div>
  <div class="form-group" style='margin-left:0px; margin-right:0px;'>
    <label for="inputEmail3" class="col-sm-2 control-label">P Show Date</label>
    <div class="col-sm-10">
      <%= f.text_field :show_date, class: 'form-control' %>
    </div>
  </div>
  <div class="form-group" style='margin-left:0px; margin-right:0px;'>
    <label for="inputEmail3" class="col-sm-2 control-label">P City</label>
    <div class="col-sm-10">
      <%= f.text_field :city, class: 'form-control' %>
    </div>
  </div>
  <div class="form-group" style='margin-left:0px; margin-right:0px;'>
    <label for="inputEmail3" class="col-sm-2 control-label">P Author</label>
    <div class="col-sm-10">
      <%= f.text_field :author, class: 'form-control' %>
    </div>
  </div>
  <div class="form-group" style='margin-left:0px; margin-right:0px;'>
    <label for="inputEmail3" class="col-sm-2 control-label">P Content</label>
    <div class="col-sm-10">
      <%= f.text_field :content, class: 'form-control' %>
    </div>
  </div>
  <div class="form-group" style='margin-left:0px; margin-right:0px;'>
    <label for="inputEmail3" class="col-sm-2 control-label">图片起始页</label>
    <div class="col-sm-10">
      <%= f.text_area :images_start_page, class: 'form-control', rows: 2 %>
    </div>
  </div>
  <div class="form-group" style='margin-left:0px; margin-right:0px;'>
    <label for="inputEmail3" class="col-sm-2 control-label">P Imgs Attr</label>
    <div class="col-sm-10">
      <%= f.text_field :img_attr, class: 'form-control' %>
    </div>
  </div>
  <div class="form-group" style='margin-left:0px; margin-right:0px;'>
    <label for="inputEmail3" class="col-sm-2 control-label">Img Rule</label>
    <div class="col-sm-10">
      <%= f.text_field :img_rule, class: 'form-control' %>
    </div>
  </div>
  <div class="form-group" style='margin-left:0px; margin-right:0px;'>
    <label for="inputEmail3" class="col-sm-2 control-label">Others</label>
    <div class="col-sm-10">
      <%= f.text_field :others, class: 'form-control' %>
    </div>
  </div>
  <div class="form-group" style='margin-left:0px; margin-right:0px;'>
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit '提交Tshow爬虫', class: 'btn btn-primary' %>
    </div>
  </div>
<% end %>
