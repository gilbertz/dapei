headless = Headless.new(:reuse => false)
headless.start

$redis =  Redis.new(:host => 'localhost', :port => 6379)
 
driver = Selenium::WebDriver.for :chrome
#driver.manage.timeouts.implicit_wait = 30
driver.manage.timeouts.script_timeout = 120
